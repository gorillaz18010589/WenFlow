<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_dialog" parent="Theme.AppCompat.Light.NoActionBar">
<!--    <style name="fragment_dialog" parent="Theme.MaterialComponents.Light.NoActionBar">-->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="bottomNavTitleTextSelected" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/color_secondary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/noto_sans_medium_500</item>
    </style>


    <style name="bottomNavTitleTextDefault" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_on_secondary</item>
        <item name="android:fontFamily">@font/noto_sans_medium_500</item>
    </style>

    <style name="textMsgStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/noto_sans_medium_500</item>
    </style>




    <!--  product start  -->

    <style name="textPriceStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/noto_sans_medium_500</item>
    </style>

    <style name="textProductTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/noto_sans_bold_700</item>
    </style>

    <style name="text_22_700_Title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/noto_sans_bold_700</item>
    </style>

    <style name="text_16_500_Title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_80878282</item>
        <item name="android:fontFamily">@font/noto_sans_medium_500</item>
    </style>

    <style name="text_18_500_black" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/noto_sans_medium_500</item>
    </style>

    <!--  product End  -->

    <style name="left_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="bottom_animation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_top_to_bottom</item>
    </style>

    <style name="fade_animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>





</resources>

